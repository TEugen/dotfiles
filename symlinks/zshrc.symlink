export DOTFILES="$HOME/.dotfiles"
export PATH="$DOTFILES/bin:/usr/local/bin:$PATH"


# Load config and plugins
for filepath in $DOTFILES/zsh/**/*.zsh; do
  source $filepath
done


# Load OS specific configuration
case "$(get_os_name)" in
  darwin) source $DOTFILES/osx/config.zsh ;;
  windows) source $DOTFILES/windows/config.zsh ;;
  *) source $DOTFILES/unix/config.zsh ;;
esac


# Load local config and plugins
if [ -f "$HOME/.local.zsh" ]; then
  source "$HOME/.local.zsh"
fi
