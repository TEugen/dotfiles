export DOTFILES="$HOME/.dotfiles"
export PATH="$DOTFILES/bin:/usr/local/bin:$PATH"


# Load config and plugins
for filepath in $DOTFILES/zsh/**/*.zsh; do
  source $filepath
done


# Load OS specific configuration
case "$(get_os_name)" in
  darwin) source $DOTFILES/osx/config.zsh ;;
  ubuntu) source $DOTFILES/ubuntu/config.zsh ;;
esac